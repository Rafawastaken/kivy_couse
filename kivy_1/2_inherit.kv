#:kivy 1.9.0

<Button>
    font_size: 24
    background_normal: ""
    background_color: (.32, 0, .56)

<TextInput>
    background_color: (0.90, 0.90, 0.90)


<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text:"Name"
            font_size: 32
            background_color: (182/255, 66/255, 245/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Text
            color: (0, 1, 0, 1)
            bold: True
            outline_color: (0, 0, 0)
            outline_width: 2


        TextInput:
            multiline: False
            background_color:(0.1, 0.1, 0.1)

        Button:
            text: "Clear"